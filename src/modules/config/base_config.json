{
    "module": {
        "_heartbeat_interval": 30
    },
    "service": {
        "_port": 5000,
        "_service_type": "_module._tcp.local."
    },
    "communication": {
        "_command_socket_port": 5555,
        "_status_socket_port": 5556,
        "_data_format": "json"
    },
    "logging": {
        "_level": "INFO",
        "_format": "%(asctime)s - %(levelname)s - %(message)s"
    },
    "recording": {
        "segment_length_seconds": 30,
        "_pre_record_seconds": 5,
        "_post_record_seconds": 5,
        "_timestamp_overlay": true,
        "_timestamp_format": "%Y-%m-%d %H:%M:%S",
        "_timestamp_position": "bottom-right",
        "_recording_folder": "rec",
        "_recording_filetype": "NOT SET"
    },
    "streaming": {
        "_enabled": true,
        "_port": 8554,
        "_transport": "udp"
    },
    "_auto_export": true,
    "_controller_share_path": "controller_share",
    "_nas_ip": "192.168.0.2",
    "_nas_share_path": "data",
    "_nas_recordings_path": "recordings"
}