{
    "module": {
        "heartbeat_interval": 30,
        "name": "unnamed",
        "samplerate": 200,
        "status_reporting": true,
        "error_retry_count": 3,
        "error_retry_delay": 5
    },
    "zeroconf": {
        "port": 5353,
        "service_type": "_module._tcp.local.",
        "announce": true
    },
    "communication": {
        "command_socket_port": 5555,
        "status_socket_port": 5556,
        "data_format": "json",
        "compression": false
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(levelname)s - %(message)s",
        "to_file": true,
        "directory": "/var/log/saviour",
        "max_file_size_mb": 10,
        "backup_count": 5
    },
    "network": {
        "reconnect_attempts": 5,
        "reconnect_delay": 5,
        "timeout": 10
    },
    "pins": {
        "19": {
            "type": "output",
            "output_type": "experiment_clock",
            "duty_cycle": "75%",
            "description": "Experiment clock with 75% duty cycle"
        },
        "3": {
            "type": "input",
            "description": "Debug output from GPIO2"
        },
        "26": {
            "type": "output",
            "output_type": "pseudorandom",
            "min_interval": 0.5,
            "max_interval": 5.0,
            "pulse_duration": 0.05,
            "description": "Pseudorandom pulses with 0.5-5 second intervals"
        },
        "15": {
            "type": "input",
            "description": "Debug output from GPIO4"
        }
    },
    "recording_folder": "rec",
    "recording_filetype": "txt",
    "auto_export": true,
    "auto_delete_on_export": true,
    "controller_share_path": "controller_share",
    "controller_username": "pi",
    "controller_password": "saviour",
    "nas_ip": "192.168.0.2",
    "nas_share_path": "data",
    "nas_recordings_path": "recordings",
    "nas_username": "sidbit",
    "nas_password": "RaspberryWonder1305"
} 