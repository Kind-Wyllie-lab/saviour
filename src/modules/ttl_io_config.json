{
    "ttl_io": {
        "interface_type": "gpio",
        "i2c_address": 0,
        "spi_bus": 0,
        "spi_device": 0
    },
    "digital_inputs": {
        "pins": [17, 18, 27, 22],
        "pull_up": true,
        "debounce_ms": 50,
        "sample_rate_hz": 100,
        "logging_enabled": true
    },
    "digital_outputs": {
        "pins": [23, 24, 25, 4],
        "default_state": "low",
        "open_drain": false,
        "pwm_enabled": false
    },
    "analog_inputs": {
        "enabled": true,
        "channels": [0, 1, 2, 3],
        "reference_voltage": 3.3,
        "resolution_bits": 10,
        "sample_rate_hz": 50,
        "filtering": true,
        "filter_samples": 5
    },
    "analog_outputs": {
        "enabled": false,
        "channels": [0, 1],
        "reference_voltage": 3.3,
        "resolution_bits": 8
    },
    "triggers": {
        "rising_edge": {
            "enabled": true,
            "pins": [17, 18],
            "send_notification": true
        },
        "falling_edge": {
            "enabled": true,
            "pins": [27, 22],
            "send_notification": true
        },
        "threshold": {
            "enabled": true,
            "channels": [0, 1],
            "high_threshold": 2.5,
            "low_threshold": 0.8,
            "hysteresis": 0.1,
            "send_notification": true
        }
    },
    "synchronization": {
        "sync_output_pin": 7,
        "pulse_width_us": 100,
        "sync_interval_ms": 1000
    }
} 